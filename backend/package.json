    "sqlite3": "^5.1.7",
    "winston": "^3.18.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/argon2": "^0.14.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.8.1",
    "@types/sqlite3": "^3.1.11",
    "@types/winston": "^2.4.4",
    "esbuild": "^0.24.0",
    "esbuild-plugin-tsconfig-paths": "^1.0.1",
    "nodemon": "^3.1.10",
