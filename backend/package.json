    "clean": "rm -rf dist",
    "prebuild": "npm run clean"
  },
  "dependencies": {
    "argon2": "^0.44.0",
    "cors": "^2.8.5",
    "decimal.js": "^10.6.0",
    "express": "^5.1.0",
